<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magneto" translate="label" sortOrder="10">
            <label>Magneto</label>
        </tab>
        <section id="embroidery" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Embroidery</label>
            <tab>magneto</tab>
            <resource>Magneto_Embroidery::embroidery_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="name_price" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Name Text Price Per Line (in $)</label>
                    <comment>This price will display on the frontend.</comment>
                </field>
                <field id="stock_price" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Stock Design Price Per Line (in $)</label>
                    <comment>This price will display on the frontend.</comment>
                </field>
                <field id="logo_price" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Custom Logo Price Per Line (in $)</label>
                    <comment>This price will display on the frontend.</comment>
                </field>
                <field id="logo_price_setup_fee" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Custom Logo Setup Fee Per Line (in $)</label>
                    <comment>This price will display on the frontend.</comment>
                </field>
            </group>
        </section>
    </system>
</config>